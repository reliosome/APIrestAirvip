<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- Informations sur le projet -->
    <groupId>com.airvip</groupId>
    <artifactId>APIrestAirvip</artifactId>
    <version>1.0-SNAPSHOT</version>
    <name>APIrestAirvip</name>
    <description>API REST de gestion des aéroports</description>

    <!-- Définir la version de Java -->
    <properties>
        <java.version>21</java.version>
    </properties>

    <dependencies>
        <!-- Dépendance Spring Boot Starter Web pour une API REST -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
			<version>3.4.3</version>
        </dependency>

        <!-- Dépendance Spring Boot Starter Data JPA pour la gestion de la base de données -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-data-jpa</artifactId>
			<version>3.4.3</version>
        </dependency>

        <!-- Dépendance pour la connexion à une base de données SQL Server -->

        <dependency>
            <groupId>com.microsoft.sqlserver</groupId>
            <artifactId>mssql-jdbc</artifactId>
			<version>12.10.0</version>
        </dependency>
        <!-- Dépendance Spring Boot Starter Test pour les tests unitaires -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
			<version>3.4.3</version>
            <scope>test</scope>
        </dependency>

        <!--Dépendance JWT pour validation de session web -->

        <dependency>
            <groupId>io.jsonwebtoken</groupId>
            <artifactId>jjwt-api</artifactId>
            <version>0.12.6</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- Plugin pour construire le package JAR de l'application Spring Boot -->
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
				<version>3.4.3</version>
            </plugin>
        </plugins>
    </build>

</project>

